{
  "name": "prj-cable-x-js",
  "version": "0.0.0-development1",
  "description": "Javascript client for cable-x",
  "private": true,
  "module": "src/index.ts",
  "scripts": {
    "test": "karma start --code-coverage=true --watch=false",
    "test-headless": "karma start --code-coverage=true --watch=false --no-progress --browsers=ChromeHeadless  && cat ./coverage/cable-x-js/lcov.info | coveralls",
    "build:clean": "rimraf dist",
    "build:types": "tsc --emitDeclarationOnly --declaration true",
    "prebuild": "yarn build:clean && yarn build:types",
    "build": "webpack",
    "lint": "tslint --project .",
    "copyfiles": "cp -r CHANGELOG.md dist/CHANGELOG.md && cp -r dist/package.json src/package.json",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Code-Vedas/cable-x-js.git"
  },
  "author": "nitesh.purohit.it@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Code-Vedas/cable-x-js/issues"
  },
  "homepage": "https://github.com/Code-Vedas/cable-x-js#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-angular": "^12.0.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@types/node": "^14.14.31",
    "@types/uuid": "^8.3.0",
    "actioncable": "^5.2.4-5",
    "awesome-typescript-loader": "^5.2.1",
    "copy-webpack-plugin": "^7.0.0",
    "coveralls": "^3.1.0",
    "husky": "^5.1.3",
    "karma-coverage-istanbul-instrumenter": "^1.0.3",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-jasmine-html-reporter": "^1.5.4",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "rxjs": "~6.6.6",
    "semantic-release": "^17.4.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.17",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.2.2",
    "uuid": "^8.3.2",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "@types/jasmine": "~3.6.4",
    "jasmine": "~3.6.4",
    "karma": "~6.1.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-cli": "~2.0.0",
    "karma-jasmine": "~4.0.1",
    "karma-typescript": "~5.4.0",
    "mock-socket": "^9.0.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "tslint --project ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "branch": "master",
    "ci": false,
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "analyzeCommits": [
      "@semantic-release/commit-analyzer"
    ],
    "generateNotes": {
      "path": "@semantic-release/release-notes-generator",
      "preset": "angular",
      "parserOpts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ]
      },
      "writerOpts": {
        "commitsSort": [
          "scope",
          "subject"
        ]
      }
    },
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      {
        "path": "@semantic-release/npm",
        "pkgRoot": "dist",
        "npmPublish": false
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "yarn copyfiles"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "echo '//registry.npmjs.org/:_authToken='$NPM_TOKEN>.npmrc"
      },
      {
        "path": "@semantic-release/exec",
        "cmd": "npm publish dist"
      },
      {
        "path": "@semantic-release/git",
        "assets": [
          "CHANGELOG.md",
          "src/package.json",
          "yarn.lock"
        ],
        "message": "build(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "publish": [
      "@semantic-release/github"
    ]
  }
}
